@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12">
    <div class="card mb-4">

        <div class="card-body">
           
            <div class="table-responsive">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                    
                            <th scope="col">Name</th>
                            <th scope="col">IsMain</th>
                           
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                           
                            <td>@item.Name</td>
                            <td>@item.IsMain</td>
                         
                            <td>
                                <a class="btn btn-warning" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id" >Update</a>
                                <a class="btn btn-success" asp-controller="Category" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"  >Delete</a>
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>
 </div>
